<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white">
  
  <!-- Header -->
  <header class="bg-gray-800/50 backdrop-blur-lg border-b border-gray-700 sticky top-0 z-30">
    <div class="px-4 py-3 flex items-center justify-between">
      
      <!-- Left Section -->
      <div class="flex items-center gap-4">
        <button 
          (click)="toggleSidebar()"
          class="p-2 hover:bg-gray-700 rounded-lg transition-colors lg:hidden">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
        
        <div class="flex items-center gap-3">
          <div class="w-10 h-10 bg-gradient-to-br from-purple-600 to-blue-600 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h1 class="text-xl font-bold hidden sm:block">VantixIPTV</h1>
        </div>
      </div>

      <!-- Search Bar -->
      <div class="flex-1 max-w-xl mx-4">
        <div class="relative">
          <input 
            type="text"
            [(ngModel)]="searchTerm"
            placeholder="Buscar canales..."
            class="w-full bg-gray-700/50 border border-gray-600 rounded-lg pl-10 pr-10 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent">
          <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
          </svg>
          @if (searchTerm()) {
            <button 
              (click)="clearSearch()"
              class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-white">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          }
        </div>
      </div>

      <!-- Right Section -->
      <div class="flex items-center gap-2">
        <button 
          (click)="showFavoritesOnly.set(!showFavoritesOnly())"
          [class.bg-purple-600]="showFavoritesOnly()"
          [class.bg-gray-700]="!showFavoritesOnly()"
          class="p-2 rounded-lg transition-colors hover:scale-105">
          <svg class="w-6 h-6" [class.fill-yellow-400]="showFavoritesOnly()" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
          </svg>
        </button>

        <div class="relative">
          <button 
            (click)="toggleUserMenu()"
            class="p-2 hover:bg-gray-700 rounded-lg transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </button>

          @if (showUserMenu()) {
            <div class="absolute right-0 mt-2 w-48 bg-gray-800 border border-gray-700 rounded-lg shadow-xl py-2 z-50">
              <button 
                (click)="logout()"
                class="w-full px-4 py-2 text-left hover:bg-gray-700 flex items-center gap-2 text-red-400">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                </svg>
                Cerrar Sesión
              </button>
            </div>
          }
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="flex">
    
    <!-- Sidebar -->
    <aside 
      [class.translate-x-0]="isSidebarOpen()"
      [class.-translate-x-full]="!isSidebarOpen()"
      class="fixed lg:static inset-y-0 left-0 z-20 w-64 bg-gray-800/30 backdrop-blur-lg border-r border-gray-700 transition-transform duration-300 overflow-y-auto mt-[57px] lg:mt-0">
      
      <div class="p-4">
        <h2 class="text-sm font-semibold text-gray-400 uppercase mb-3">Categorías</h2>
        
        <!-- Todos los canales -->
        <button 
          (click)="selectCategory(null)"
          [class.bg-purple-600]="selectedCategoryId() === null"
          [class.bg-gray-700]="selectedCategoryId() !== null"
          class="w-full text-left px-4 py-3 rounded-lg mb-2 hover:bg-purple-600 transition-colors flex items-center justify-between group">
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            <span>Todos los Canales</span>
          </span>
          <span class="text-xs bg-gray-900/50 px-2 py-1 rounded">{{ channels().length }}</span>
        </button>

        <!-- Lista de categorías -->
        <div class="space-y-1">
          @for (category of categories(); track category.id) {
            <button 
              (click)="selectCategory(category.id)"
              [class.bg-purple-600]="selectedCategoryId() === category.id"
              [class.bg-gray-700/50]="selectedCategoryId() !== category.id"
              class="w-full text-left px-4 py-3 rounded-lg hover:bg-purple-600 transition-colors flex items-center justify-between group">
              <span class="truncate">{{ category.name }}</span>
              <span class="text-xs bg-gray-900/50 px-2 py-1 rounded">
                {{ getCategoryCount(category.id) }}
              </span>
            </button>
          }
        </div>

        @if (categories().length === 0) {
          <p class="text-gray-500 text-sm text-center py-8">
            No hay categorías disponibles
          </p>
        }
      </div>
    </aside>

    <!-- Overlay para cerrar sidebar en móvil -->
    @if (isSidebarOpen()) {
      <div 
        (click)="toggleSidebar()"
        class="fixed inset-0 bg-black/50 z-10 lg:hidden">
      </div>
    }

    <!-- Main Content Area -->
    <main class="flex-1 p-4 lg:p-6 overflow-y-auto">
      
      <!-- Video Player Section -->
      <div class="mb-8 bg-black rounded-2xl overflow-hidden shadow-2xl ring-1 ring-gray-800">
        <div class="aspect-video relative">
          <app-video-player [channel]="selectedChannel()"></app-video-player>
        </div>
        
        <!-- Channel Info Below Player -->
        @if (selectedChannel()) {
          <div class="bg-gray-900/90 backdrop-blur p-4 border-t border-gray-800">
            <div class="flex items-center gap-4">
              @if (selectedChannel()?.logo) {
                <img 
                  [src]="selectedChannel()!.logo" 
                  [alt]="selectedChannel()!.name"
                  class="w-12 h-12 rounded-lg object-cover bg-gray-800"
                  onerror="this.style.display='none'">
              }
              <div class="flex-1">
                <h2 class="text-xl font-bold text-white mb-1">{{ selectedChannel()?.name }}</h2>
                <p class="text-gray-400 text-sm">{{ selectedChannel()?.categoryName || 'General' }}</p>
              </div>
              <button 
                (click)="closePlayer()"
                class="px-4 py-2 bg-gray-800 hover:bg-gray-700 rounded-lg text-white text-sm transition-colors">
                Cambiar Canal
              </button>
            </div>
          </div>
        }
      </div>

      <!-- Channel List Header -->
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold flex items-center gap-2">
          @if (showFavoritesOnly()) {
            <span class="text-yellow-400">★</span> Favoritos
          } @else if (selectedCategoryId()) {
            @if (selectedCategoryId(); as catId) {
              @for (cat of categories(); track cat.id) {
                @if (cat.id === catId) {
                  {{ cat.name }}
                }
              }
            }
          } @else {
            <span>Todos los Canales</span>
          }
          <span class="text-sm font-normal text-gray-400 bg-gray-800 px-2 py-1 rounded ml-2">
            {{ filteredChannels().length }} canales
          </span>
        </h2>
      </div>

      <!-- Channel Grid -->
      <!-- Channel Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 pb-20">
        @for (channel of filteredChannels(); track channel.id) {
          <div 
            (click)="selectChannel(channel)"
            [class.ring-2]="selectedChannel()?.id === channel.id"
            [class.ring-purple-500]="selectedChannel()?.id === channel.id"
            class="bg-gray-800/50 border border-gray-700 rounded-xl p-4 hover:bg-gray-700/50 hover:border-purple-500 hover:shadow-lg hover:shadow-purple-500/10 transition-all cursor-pointer group flex items-start gap-4">
            
            <!-- Logo -->
            <div class="w-12 h-12 bg-gray-900 rounded-lg flex-shrink-0 flex items-center justify-center p-1 overflow-hidden transition-colors">
              @if (channel.logo) {
                <img [src]="channel.logo" [alt]="channel.name" class="w-full h-full object-contain" loading="lazy">
              } @else {
                <span class="text-xl font-bold text-gray-600 group-hover:text-purple-400">{{ channel.name.charAt(0) }}</span>
              }
            </div>

            <!-- Info -->
            <div class="flex-1 min-w-0">
              <h3 class="font-semibold text-gray-200 truncate group-hover:text-white transition-colors"
                  [class.text-purple-400]="selectedChannel()?.id === channel.id">
                {{ channel.name }}
              </h3>
              <p class="text-xs text-gray-500 uppercase tracking-wider mt-1 truncate">
                {{ channel.categoryName || 'General' }}
              </p>
            </div>

            <!-- Fav Btn -->
            <button 
              (click)="$event.stopPropagation(); toggleFavorite(channel.id, $event)"
              class="text-gray-600 hover:text-yellow-400 transition-colors p-1">
              <svg class="w-5 h-5" [class.fill-current]="isFavorite(channel.id)" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
              </svg>
            </button>
          </div>
        }
      </div>

      @if (filteredChannels().length === 0) {
        <div class="flex flex-col items-center justify-center py-20 text-gray-500">
          <svg class="w-16 h-16 mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <p class="text-lg">No se encontraron canales</p>
        </div>
      }
    </main>
  </div>
</div>
